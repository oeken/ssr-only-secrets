{
  "name": "ssr-only-secrets",
  "version": "0.0.3",
  "description": "This package provides a way to pass secrets from Server Components into the SSR-run of Client Components, without them being accessible in the browser.",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/docs.d.ts",
      "react-server": {
        "default": "./dist/rsc.js"
      },
      "default": {
        "browser": "./dist/browser.js",
        "node": "./dist/ssr.js"
      }
    },
    "./package.json": "./package.json"
  },
  "typesVersions": {
    "*": {
      ".": [
        "./dist/docs.d.ts"
      ]
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/phryneas/ssr-only-secrets.git"
  },
  "author": "Lenz Weber-Tronic",
  "license": "MIT",
  "dependencies": {
    "optimism": "^0.17.5"
  },
  "devDependencies": {
    "@microsoft/api-documenter": "^7.23.16",
    "@microsoft/api-extractor": "^7.39.1",
    "@tsconfig/recommended": "^1.0.3",
    "@types/node": "^20.10.6",
    "@types/react": "^18.2.46",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "peerDependencies": {
    "react": "^18"
  },
  "scripts": {
    "build": "yarn build:clean && yarn build:build && yarn build:docs && yarn build:readme",
    "build:clean": "rimraf dist;",
    "build:build": "tsc",
    "build:docs": "api-extractor run; api-documenter markdown --input-folder temp --output-folder docs",
    "build:readme": "sed 's@(./@(https://github.com/phryneas/ssr-only-secrets/blob/main/docs/@' docs/ssr-only-secrets.md > README.md",
    "prepare": "yarn build"
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ]
}
